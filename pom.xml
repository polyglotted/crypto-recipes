<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.polyglotted</groupId>
        <artifactId>oss-parent</artifactId>
        <version>1.0.1</version>
    </parent>

    <artifactId>crypto-utils</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Polyglotted Cryptographic Utilities</name>
    <description>A library of standard cryptographic utilities for application usage</description>
    <url>http://www.polyglotted.org/crypto-utils</url>

    <scm>
        <connection>scm:git:ssh://github.com/polyglotted/crypto-utils.git</connection>
        <developerConnection>scm:git:git+ssh://git@github.com/polyglotted/crypto-utils.git</developerConnection>
        <url>https://github.com/polyglotted/crypto-utils</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <junit.version>4.11</junit.version>
        <jcommander.version>1.30</jcommander.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.beust</groupId>
            <artifactId>jcommander</artifactId>
            <version>${jcommander.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/assembly/jar-assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
